{
  "name": "vite-tm-v2",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --ext .tsx,.ts,.js,jsx --fix .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "gcapi": "openapi-generator-cli generate && npm run format",
    "i18n": "i18next-scanner --config scanner.config.cjs",
    "ci:add": "changeset add",
    "ci:tag": "changeset version && git add . && git commit -m \"release: ${npm_package_version}\" && changeset tag && git push --follow-tags"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@ant-design/pro-components": "^2.4.15",
    "@ebay/nice-modal-react": "^1.2.10",
    "@emotion/styled": "^11.11.0",
    "@formily/antd-v5": "1.1.0-beta.3",
    "@formily/core": "^2.2.24",
    "@formily/react": "^2.2.24",
    "@tanstack/react-query": "^4.29.7",
    "antd": "^5.5.0",
    "dayjs": "^1.11.7",
    "echarts": "^5.4.2",
    "echarts-for-react": "^3.0.2",
    "i18next": "^22.4.15",
    "i18next-http-backend": "^2.2.0",
    "immer": "^10.0.2",
    "jotai": "^2.1.0",
    "jotai-immer": "^0.2.0",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-auth-kit": "^2.12.2",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.2.2",
    "react-router-dom": "^6.11.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.1.5",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitejs/plugin-react-swc": "^3.3.1",
    "@vitest/ui": "^0.31.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "i18next-scanner": "^4.2.0",
    "lint-staged": "^13.2.2",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.8",
    "prettier-config-standard": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.6",
    "vitest": "^0.31.0"
  }
}
