{
  "name": "vite-tm-v2",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "postinstall": "simple-git-hooks",
    "format": "biome format --write .",
    "lint": "biome check --apply .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "gcapi": "openapi-generator-cli generate && npm run format",
    "i18n": "i18next-scanner --config scanner.config.cjs",
    "ci:add": "changeset add",
    "ci:_version": "changeset version",
    "ci:_tag": "changeset tag && git push --follow-tags",
    "ci:release": "npm run ci:_version && npm run ci:_tag"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["biome lint .", "bash -c tsc"],
    "*": ["biome format ."]
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.3",
    "@ant-design/pro-components": "^2.6.50",
    "@auth-kit/react-router": "^3.1.2",
    "@ebay/nice-modal-react": "^1.2.13",
    "@emotion/styled": "^11.11.0",
    "@formily/antd-v5": "1.1.9",
    "@formily/core": "^2.3.1",
    "@formily/react": "^2.3.1",
    "@tanstack/react-query": "^5.28.4",
    "antd": "^5.15.3",
    "dayjs": "^1.11.10",
    "echarts": "^5.5.0",
    "echarts-for-react": "^3.0.2",
    "i18next": "^23.10.1",
    "i18next-http-backend": "^2.5.0",
    "immer": "^10.0.4",
    "jotai": "^2.7.1",
    "jotai-immer": "^0.3.0",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-auth-kit": "^3.1.2",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@changesets/cli": "^2.27.1",
    "@openapitools/openapi-generator-cli": "^2.12.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/ui": "^1.4.0",
    "autoprefixer": "^10.4.18",
    "i18next-scanner": "^4.4.0",
    "lint-staged": "^15.2.2",
    "picocolors": "^1.0.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "simple-git-hooks": "^2.11.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  }
}
