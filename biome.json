{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "ignore": ["dist", ".vscode/**", "./src/api/"],
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConsoleLog": "error"
      },
      "style": {
        "useFragmentSyntax": "warn"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error"
      },
      "nursery": {
        "all": true,
        "useImportRestrictions": "off",
        "noReactSpecificProps": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off",
        "noConsole": "off"
      }
    }
  },
  "formatter": {
    "ignore": ["dist", ".vscode/", "./src/api/"],
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
