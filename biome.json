{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["dist", ".vscode/**", "./src/api/**"]
  },
  "linter": {
    "ignore": ["dist", ".vscode/**", "./src/api/**"],
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "noUndeclaredDependencies": "off"
      }
    }
  },
  "formatter": {
    "ignore": ["dist", ".vscode/**", "./src/api/**"],
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
