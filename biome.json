{
  "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "ignore": ["dist", ".vscode/**", "./src/api/"],
    "enabled": true
  },
  "formatter": {
    "ignore": ["dist", ".vscode/", "./src/api/"],
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
